<view class="form-main fo-shen">
  <view class="form-li">
      <view class="put">{{dataList.id}}</view>
      <view class="title">店员ID：</view>
      <view class="co"></view>
    </view>
    <view class="form-li">
      <view class="put">{{dataList.username}}</view>
      <view class="title">用户名：</view>
      <view class="co"></view>
    </view>
    <view class="form-li">
      <view class="put">{{dataList.realname}}</view>
      <view class="title">真实姓名：</view>
      <view class="co"></view>
    </view>
    <view class="form-li">
      <view class="put">{{dataList.mobile}}</view>
      <view class="title">联系电话：</view>
      <view class="co"></view>
    </view>
    <view class="form-li">
      <view class="put">{{dataList.credits}}</view>
      <view class="title">积分数：</view>
      <view class="co"></view>
    </view>
    <view class="form-li">
      <view class="put">{{dataList.experience}}</view>
      <view class="title">总消数量：</view>
      <view class="co"></view>
    </view>
    <view class="form-li no">
      <view class="put">{{dataList.status==1?'启用' : '禁用'}}</view>
      <view class="title">状态：</view>
      <view class="co"></view>
    </view>
</view>


<view class="bo-btn">
  <view class="bo-li" bindtap="jifen">
    <image src="http://lbdj.oss-cn-beijing.aliyuncs.com/lbdj_app_h5/page/cwz/bo1.png"></image>
    <text>积分</text>
  </view>
  <view class="bo-li" bindtap="xiaoshu">
    <image src="http://lbdj.oss-cn-beijing.aliyuncs.com/lbdj_app_h5/page/cwz/bo2.png"></image>
    <text>消数</text>
  </view>
  <view class="bo-li" bindtap="goUp">
    <image src="http://lbdj.oss-cn-beijing.aliyuncs.com/lbdj_app_h5/page/cwz/bo3.png"></image>
    <text>编辑</text>
  </view>
  <view class="bo-li" bindtap="del">
    <image src="http://lbdj.oss-cn-beijing.aliyuncs.com/lbdj_app_h5/page/cwz/bo4.png"></image>
    <text>删除</text>
  </view>
</view>