/* pages/shop/shop.wxss */
page{
  background: #e9d8c1;
}
.banner{
  width: 750rpx;
  height: 240rpx;
  position: fixed;
  top: 0;
}
.banner image{
  width: 100%;
  height: 100%;
}
.main-box{
  position: absolute;
  background-color: #ffffff;
  width: 650rpx;
  height: 500rpx;
  left: 30rpx;
  border-radius: 20rpx;
  padding: 20rpx;
}
.main{
  position: relative;
  padding-top: 200rpx;
}
.main-img{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: -30rpx;
  left: 238rpx;
  background-color: #ffffff;
  padding: 5px;
}
.main-img image{
  width: 100%;
  height: 100%;
}
.main-txt{
  padding-top: 200rpx;
}
.main-txt .h3{
  font-size: 40rpx;
  margin-bottom: 10px;
}
.main-txt text{
  display: block;
  text-align: center;
  padding-bottom: 20rpx;
  font-size: 30rpx;
}

.form-main{
  background-color:rgba(255,255,255,0.9);
  width: 630rpx;
  margin-left: 30rpx;
  margin-top: 50rpx;
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  font-size: 32rpx;
}
.put{
  float: right;
  width: 440rpx;
  text-align: right;
  color: #555555;
}
.co{
  clear: both;
}
.form-li{
  padding: 35rpx 0rpx;
  border-bottom: 1rpx #f3e8d9 solid
}
.btn{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  text-align: center;
  height: 110rpx;
  line-height: 110rpx;
  color: #ffffff;
  background-color: #f75060;
}
.fo-shen .put{
  color: #999999;
}
.put .img image{
  width: 100rpx;
  height: 100rpx;
}