<view wx-if="{{agent_info.status == 100}}">
  <view class="banner"><image src="../images/banner2.jpg"></image></view>
  <view class="main">
    <view class="main-box" >
      <view class="main-img"><image src="{{imgUrl}}"></image></view>
      <view class="main-txt">
        <text class="h3">{{agent_info.name}}</text>
        <text>地址：{{agent_info.district_str}}{{agent_info.address}}</text>
        <text>联系电话：{{agent_info.mobile}}</text>
