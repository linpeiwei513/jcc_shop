<view class="list" wx:if="{{dataList}}">
  <view class="li" wx:for="{{dataList}}" wx:key="key">
    <view class="title">订单号：{{item.bill_no}}</view>
    <!-- <view class="txt">钻石行业面临衰退迹象 抛光钻石和原石需求双双下降</view> -->
    <view class="main">
      <view class="main-p">原价：{{item.total_amt}}</view>
      <view class="main-p">折后价：{{item.total_amt}}</view>
      <view class="co"></view>
    </view>
    <view class="time">{{item.billdate}}</view>
    <text class="type">{{item.status == 1?'通过' : '审核中'}}</text>
    <text class="user">{{item.onhand_status == 1? '已入库':'未入库'}}</text>
  </view>
</view>

<view class="none" wx:if="{{dataList.length < 1}}">
  <image src="http://lbdj.oss-cn-beijing.aliyuncs.com/lbdj_app_h5/page/cwz/none.png"></image>
  <view>没有相关商品</view>
</view>