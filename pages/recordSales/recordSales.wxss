/* pages/recordStock/recordStock.wxss */
.list{
  padding: 20rpx 30rpx;
}
.li{
  background-color: #ffffff;
  position: relative;
  margin-bottom: 20rpx;
}
.title{
  font-size: 32rpx;
  padding: 0rpx 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.txt{
  padding: 20rpx;
  font-size: 32rpx;
}
.time{
  font-size: 28rpx;
  color: #888888;
  border-top: 1rpx solid #f0f0f0;
  padding: 20rpx;
}
.li .type{
  position: absolute;
  background-color: #e1ad62;
  color: #ffffff;
  font-size: 28rpx;
  padding: 3rpx 10rpx;
  border-radius: 2rpx;
  right: 20rpx;
  top: 20rpx;
}
.user{
  position: absolute;
  color: #e1ad62;
  font-size: 32rpx;
  padding: 3rpx 10rpx;
  border-radius: 2rpx;
  right: 20rpx;
  bottom: 18rpx;
}