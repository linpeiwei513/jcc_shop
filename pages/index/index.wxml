    <block wx:else>
      <view class="user-main">
        <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
        <view class="user-t">
          <view class="user-no">{{userData.username}} ({{userInfo.nickName}})</view>
          <view class="user-po">{{agentData.name}}</view>
          <view class="po-ben" bindtap="goShop">管理</view>
        </view>
        <view class="co"></view>
