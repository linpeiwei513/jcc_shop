/* pages/mall/affirm/affirm.wxss */

.mall-btn{
  width: 750rpx;
  height: 100rpx;
  background-color: #ffffff;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  line-height: 100rpx;
}
.btn-shu{
  font-size: 36rpx;
  margin-left: 30rpx;
  float: left;
}
.btn-btn{
  float: right;
  background-color: #ed5349;
  color: #ffffff;
  font-size: 36rpx;
  padding: 0rpx 40rpx;
}


.main{
  padding: 30rpx;
}
.m-bg{
  background-color: #FFFFFF;
  border-radius: 12rpx;
  position: relative;
  margin-bottom: 20rpx;
  box-shadow: #ebedf0 0 4rpx 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
}
.m-none{
  color: #444444;
  text-align: center;
}
.m-list{
  position: relative;
}
.m-list .m-name{
  font-size: 30rpx;
  margin-right: 20rpx;
}
.m-list .m-phone{
  padding-top: 2rpx;
}
.m-list .m-address{
  font-size: 26rpx;
  color: #777777;
  padding-top: 10rpx;
  width: 600rpx;
}
.m-list .m-icon{
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -15rpx;
}
.m-list .m-icon image{
  width: 30rpx;
  height: 30rpx;
}
.m-goods{
  position: relative;
}
.m-goods .m-img image{
  width: 160rpx;
  height: 160rpx;
}
.m-goods .m-con{
  width: 460rpx;
}
.m-goods .m-title{
  font-size: 28rpx;
  line-height: 34rpx;
  padding-bottom: 10rpx;
}
.m-goods .m-jifen{
  color: #ed5349;
  font-size: 40rpx;
}
.m-goods .m-jifen text{
  font-size: 26rpx;
  color: #777777;
}
.m-goods .m-price{
  font-size: 24rpx;
  text-decoration:line-through;
  color: #888888;
}
.goods-num{
  position: absolute;
  right: 20rpx;
  bottom: 40rpx;
}
.goods-num image{
  width: 30rpx;
  height: 30rpx;
  float: right;
  margin: 0rpx 20rpx;
  margin-top: 6rpx;
}
.goods-num .num-m{
  height: 46rpx;
  float: right;
  background-color: #E4E7ED;
  line-height: 30rpx;
  width: auto;
  width: 60rpx;
  text-align: center;
  font-size: 24rpx;
  border-radius: 6rpx;
  line-height: 46rpx;
}

.num-bg{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,0.1);
  z-index: 200; 
}
.num-box{
  width: 600rpx;
  height: 380rpx;
  background-color: #ffffff;
  position: fixed;
  z-index: 201;
  border-radius: 26rpx;
  left: 50%;
  margin-left: -300rpx;
  top: 20%;
}
.num-box .num-title{
  font-size: 34rpx;
  text-align: center;
  padding: 30rpx;
}
.num-box .num-put input{
  width: 500rpx;
  height: 90rpx;
  border: 1rpx solid #dedede;
  border-radius: 8rpx;
  text-align: center;
  margin: 10rpx auto;
}
.num-mt{
  width: 100%;
  height: 100%;
  position: relative;
}
.num-btn{
  width: 100%;
  border-top: 1rpx solid #f0f0f0;
  position: absolute;
  bottom: 0;
}
.num-btn .num-btns{
  height: 100rpx;
  text-align: center;
  line-height: 99rpx;
  width: 300rpx;
}
.num-btn .btn1{
  width: 299rpx;
  color: #777777;
  border-right: 1rpx solid #f0f0f0;
}