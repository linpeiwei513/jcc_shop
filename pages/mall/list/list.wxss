/* pages/mall/list/list.wxss */
page{
  background-color: #ffffff;
}
.list-nav image{
  width: 750rpx;
  height: 95rpx;
}
.list-nav{
  background-color: #ffffff;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.mall-goods image{
  width: 750rpx;
  height: 1140rpx;
}
.mall-goods {
  margin-top: 95rpx;
}


.mall-top{
  width: 100%;
  height: 90rpx;
  background-color: #ffffff;
  position: fixed;
  top: 0;
  left: 0;
}
.mall-top .top-li{
  width: 50%;
  float: left;
  text-align: center;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #888888;
}
.mall-top .top-li.on{
  color: #E6A23C;
}
.mall-top .top-bian{
  width: 4rpx;
  height: 40rpx;
  background-color: #f0f0f0;
  position: fixed;
  top: 25rpx;
  z-index: 200;
  left: 50%;
  margin-left: -2rpx;
}
.mall-top .top-sx{
  position: fixed;
  top: 25rpx;
  right: 90rpx;
}
.mall-top .top-sx image{
  width: 40rpx;
  height: 40rpx;
}

.mall-list{
  padding: 20rpx 30rpx;
  margin-top: 92rpx;
  background-color: #ffffff;
}
.list-li{
  width: 330rpx;
  min-height: 530rpx;
}
.list-li .li-img{
  width: 100%;
  height: 310rpx;
  border: 1rpx solid #f0f0f0;
}
.list-li .li-img image{
  width: 328rpx;
  height: 309rpx;
}
.list-li .li-title{
  font-size: 26rpx;
  padding: 15rpx 0rpx;
  color: #444444;
}
.list-li .li-jifen{
  font-size: 24rpx;
  color: #d68915;
}
.list-li .li-jifen text{
  font-size: 32rpx;
  margin-right: 10rpx;
}
.list-li .li-shichang{
  text-decoration:line-through;
  font-size: 26rpx;
  color: #888888;
}
.list-li:nth-child(odd){
  float: left;
}
.list-li:nth-child(even){
  float: right;
}