/* pages/mall/index/index.wxss */
swiper{
  width: 750rpx;
  height: 350rpx;
}
swiper image{
  width: 750rpx;
  height: 350rpx;
}
.mall-banner{
  width: 750rpx;
  height: 350rpx;
}
.mall-top{
  position: relative;
}
.mall-tool{
  position: fixed;
  top: 20rpx;
  right: 30rpx;
  width: 180rpx;
  height: 70rpx;
  background-color:rgba(0,0,0,0.6);
  border-radius: 35rpx;
}
.mall-tool image{
  width: 50rpx;
  height: 50rpx;
}
.tool-l{
  float: left;
  margin-top: 10rpx;
  margin-left: 25rpx;
}
.tool-r{
  float: right;
  margin-top: 12rpx;
  margin-right: 20rpx;
}

.mall-nav{
  background-color: #ffffff;
}
.mall-tj{
  background-color: #ffffff;
}
.mall-title{
  font-size: 28rpx;
  padding: 10rpx 30rpx;
}
.mall-tj .mall-li image{
  width: 690rpx;
  height: 280rpx;
  border-radius: 10rpx;
}
.mall-tj .mall-li{
  padding: 30rpx;
}
.mall-goods image{
  width: 750rpx;
  height: 1140rpx;
}
.mall-bz{
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  bottom: 60rpx;
  right: 30rpx;
}
.mall-bz image{
  width: 100%;
  height: 100%;
}
.mall-goods{
  background-color: #ffffff;
}
.mall-nav{
  padding: 30rpx 15rpx;
}
.mall-nav .nav-li{
  width: 20%;
  text-align: center;
  font-size: 24rpx;
  color: #606266;
  float: left;
  margin: 10rpx 0rpx;
}
.mall-nav .nav-li image{
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin: 10rpx auto;
}
.mall-list{
  padding: 20rpx 30rpx;
  background-color: #ffffff;
}
.list-li{
  width: 330rpx;
  min-height: 530rpx;
}
.list-li .li-img{
  width: 100%;
  height: 310rpx;
  border: 1rpx solid #f0f0f0;
}
.list-li .li-img image{
  width: 328rpx;
  height: 309rpx;
}
.list-li .li-title{
  font-size: 26rpx;
  padding: 15rpx 0rpx;
  color: #444444;
}
.list-li .li-jifen{
  font-size: 24rpx;
  color: #d68915;
}
.list-li .li-jifen text{
  font-size: 32rpx;
  margin-right: 10rpx;
}
.list-li .li-shichang{
  text-decoration:line-through;
  font-size: 26rpx;
  color: #888888;
}
.list-li:nth-child(odd){
  float: left;
}
.list-li:nth-child(even){
  float: right;
}