/* pages/clerkList/clerkList.wxss */
.list{
  padding: 30rpx;
}
.list-li{
  background-color: #ffffff;
  padding: 20rpx;
  position: relative;
  margin-bottom: 20rpx;
}
.txt{
  margin-left: 20rpx;
  float: left;
}
.txt text{
  font-size: 28rpx;
  color: #777777;
}
.txt .phone{
  font-size: 34rpx;
  margin-left: 20rpx;
}
.txt .name{
  font-size: 36rpx;
  color: black;
}
.time{
  padding-top: 20rpx;
  font-size: 28rpx;
  color: #888888;
  margin-left: 20rpx;
  clear: both;
}
.tab{
  float: left;
  font-size: 26rpx;
  padding: 5rpx 20rpx;
  background-color: #f0f0f0;
  margin-left:20rpx;
  margin-top: 5rpx;
  border-radius: 2rpx;
}
.on1{
  background-color: #e1ad62;
  color: #ffffff;
}
.del image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 40rpx;
  top: 60rpx;
}
.btn{
  width: 100%;
  height: 110rpx;
  background-color: #f75060;
  color: #ffffff;
  font-size: 40rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  text-align: center;
  line-height: 110rpx;
}