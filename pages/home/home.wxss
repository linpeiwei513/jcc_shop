/* pages/home/home.wxss */
page{
  background-color: #f9f9f9;
}
.banner{
	width: 750rpx;
	position: relative;
}
.banner .banner-bg{
	width: 750rpx;
  height: 466rpx;
}
.banner-li{
  width: 690rpx;
  height: 280rpx;
  border-radius: 20rpx;
  position: absolute;
  top: 30rpx;
  left: 30rpx;
}
swiper{
  width: 690rpx;
  height: 280rpx;
}
swiper image{
  width: 690rpx;
  height: 280rpx;
  border-radius: 20rpx;
}
.nav{
  width: 750rpx;
  position: absolute;
  top: 370rpx;
  left: 15rpx;
}
.nav-li{
  float: left;
  width: 330rpx;
  color: #888888;
  background-color: #ffffff;
  border-radius: 10rpx;
  margin: 15rpx;
  height: 120rpx;
}
.nav-li image{
  width: 60rpx;
  height: 60rpx;
  margin-top: 32rpx;
  margin-left: 40rpx;
  display: block;
  float: left
}
.nav-li text{
  font-size: 26rpx;
  margin-left: 40rpx;
  line-height: 120rpx;
}

.ac-main{
  position: absolute;
  width: 690rpx;
  top: 370rpx;
  left: 30rpx;
}
.act .act-li{
  margin-bottom: 20rpx;
}
.act .act-li image{
  width: 690rpx;
  height: 220rpx;
  border-radius: 10rpx;
}
.xilie{
  margin-top: 40rpx;
}
.xilie .title{
  font-size: 30rpx;
  text-align: center;
  margin-bottom: 40rpx;
}
.xilie .list .li{
  width: 335rpx;
  height: 150rpx;
  background-color: #ffffff;
  box-shadow: #f5f5f5 0 4rpx 20rpx;
  border-radius: 6rpx;
  position: relative;
  margin-bottom: 20rpx;
}
.xilie .list .li:nth-child(odd){
  float: left;
}
.xilie .list .li:nth-child(even){
  float: right;
}
.xilie .list .li image{
  width: 150rpx;
  height: 150rpx;
}
.xilie .list .li text{
  font-size: 26rpx;
  color: #666666;
  position: absolute;
  text-align: center;
  text-align: right;
  top: 30rpx;
  right: 20rpx;
  width: 120rpx;
}