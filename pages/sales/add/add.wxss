/* pages/supply/add/add.wxss */
.main{
  padding: 30rpx;
}
.main-box{
  background-color: #ffffff;
  font-size: 30rpx;
  border-radius: 8rpx;
  position: relative;
  min-height: 200rpx;
  margin-bottom: 20rpx;
}
.main-title{
  padding: 20rpx;
  font-weight: bold;
  border-bottom: 3rpx solid #f0f0f0;
}
.main-btn{
  font-weight: normal;
  font-size: 24rpx;
  color: #ffffff;
  background-color: #67C23A;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
}
.main-add{
  background-color: #ffffff;
  font-size: 30rpx;
  border-radius: 8rpx;
  position: relative;
  margin-bottom: 20rpx;
  height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  line-height: 100rpx;
  color: #67C23A;
}
.main-bottom{
  position: fixed;
  left: 0;
  bottom: 0;
  height: 100rpx;
  background-color: #ffffff;
  width: 100%;
  border-top: 1rpx solid #f4f4f4;
  line-height: 100rpx;
  color: #303133;
}
.main-bottom .btn-price{
  padding-left: 30rpx;
  font-size: 30rpx;
}
.main-bottom .btn-price text{
  font-weight: bold;
}
.main-bottom .btn-btn{
  width: 266rpx;
  text-align: center;
  background-color: #F56C6C;
  color: #ffffff;
  font-size: 32rpx;
}

.main-list{
  color: #606266;
  padding-left: 20rpx;
}
.list-li{
  padding: 20rpx 20rpx 20rpx 0;
  border-bottom: 1rpx solid #F2F6FC;
}

.list-li:last-child{
  border-bottom: none;
}



.list-li .list-del image{
  width: 46rpx;
  height: 46rpx;
}
.list-li .list-del{
  padding-top: 40rpx;
}
.list-li .list-goods{
  width: 580rpx;
}
.goods-name{
  font-size: 24rpx;
  color: #303133;
  padding-bottom: 10rpx;
}
.goods-guige{
  font-size: 22rpx;
  color: #606266;
  background-color: #F2F6FC;
  display: inline-block;
  height: 40rpx;
  padding: 0rpx 15rpx;
  line-height: 40rpx;
  border-radius: 10rpx;
}
.goods-price{
  font-size: 24rpx;
  padding-top: 20rpx;
}
.goods-price text{
  font-size: 32rpx;
  font-weight: bold;
}
.goods-num{
  margin-top: 20rpx;
}
.goods-num image{
  width: 30rpx;
  height: 30rpx;
  float: right;
  margin: 0rpx 20rpx;
  margin-top: 6rpx;
}
.goods-num .num-m{
  height: 46rpx;
  float: right;
  background-color: #E4E7ED;
  line-height: 30rpx;
  width: auto;
  width: 60rpx;
  text-align: center;
  font-size: 24rpx;
  border-radius: 6rpx;
  line-height: 46rpx;
}

.num-bg{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,0.1);
  z-index: 200; 
}
.num-box{
  width: 600rpx;
  height: 380rpx;
  background-color: #ffffff;
  position: fixed;
  z-index: 201;
  border-radius: 26rpx;
  left: 50%;
  margin-left: -300rpx;
  top: 20%;
}
.num-box .num-title{
  font-size: 34rpx;
  text-align: center;
  padding: 30rpx;
}
.num-box .num-put input{
  width: 500rpx;
  height: 90rpx;
  border: 1rpx solid #dedede;
  border-radius: 8rpx;
  text-align: center;
  margin: 10rpx auto;
}
.num-mt{
  width: 100%;
  height: 100%;
  position: relative;
}
.num-btn{
  width: 100%;
  border-top: 1rpx solid #f0f0f0;
  position: absolute;
  bottom: 0;
}
.num-btn .num-btns{
  height: 100rpx;
  text-align: center;
  line-height: 99rpx;
  width: 300rpx;
}
.num-btn .btn1{
  width: 299rpx;
  color: #777777;
  border-right: 1rpx solid #f0f0f0;
}

.main-daili{
  background-color: #ffffff;
  margin-bottom: 20rpx;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  box-shadow: #ebedf0 0 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}